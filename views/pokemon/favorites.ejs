<h1 class="text-center home">My Favorite Pokemon!</h1>
<main class="text-center favorite-container">
    <ul>
        <% faves.forEach(fave => { %>
            <li>
                <a href="/pokemon/<%=fave.id%>">
                <%= fave.name %>
                </a>
                <form method="POST" action="pokemon/?_method=DELETE">
                    <input hidden type="text" name="name" value="<%= fave.name %>">
                    <input type="submit" value="Remove from favorites">
                </form>
            </li>
        <% }); %>
        
    </ul>
</main>